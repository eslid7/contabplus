        $('#aacId').val(aacId)
        $('#divTextAccount').html($('#listAccountingCatalog').bootstrapTable('getData')[index].aacName);
        $('#accountId').val($('#listAccountingCatalog').bootstrapTable('getData')[index].aacCode);
        $("#modalAccountingCatalog").modal("hide");
    }

    function getTCBussines(){
        $.ajax({
            type: "POST",
            url: "/contab/getTCBussines/"+$('#busId').val()+"/"+$('#monId').val(),
            data: $('#headerSeat').serialize(), //se envia el form serializado    
            beforeSend: function(){ //se muestra una imagen mientras el ajax se ejecuta
                showIsLoading("Procesando...");
            }
        }).done(function (results) {       
            console.log(results)
            $('#aasdChangeValue').val(results.tcAmount) 
            hideIsLoading(); 
        }).fail(function (data) {
            $('#aasdChangeValue').val(0);
            fnOpenErrorDialog(data.responseJSON.message);
            hideIsLoading();            
        })
    }
</script>